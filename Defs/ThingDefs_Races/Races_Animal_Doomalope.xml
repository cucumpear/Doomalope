<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <ThingDef ParentName="AnimalThingBase">
    <defName>Doomalope</defName>
    <label>doomalope</label>
    <description>As if boomalopes weren't explosive enough, some foolish geneticists thought to make a weaponized version. Unsurprisingly it only brought them doom. It can be milked to produce chemfuel - very, very carefully.</description>
    <statBases>
      <MoveSpeed>3</MoveSpeed>
      <MarketValue>450</MarketValue>
      <ComfyTemperatureMin>-15</ComfyTemperatureMin>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>Chemfuel</milkDef>
        <milkIntervalDays>2</milkIntervalDays>
        <milkAmount>30</milkAmount>
        <milkFemaleOnly>false</milkFemaleOnly>
      </li>
    </comps>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
      <li>
        <label>left hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.5</chanceFactor>
      </li>
    </tools>
    <race>
      <body>QuadrupedAnimalWithHoovesAndHump</body>
      <deathActionWorkerClass>Doomalope.DeathActionWorker_HugeExplosion</deathActionWorkerClass>
      <executionRange>9</executionRange>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>2</baseBodySize>
      <baseHungerRate>1.5</baseHungerRate>
      <baseHealthScale>0.8</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Plain</leatherDef>
      <wildness>0.65</wildness>
	  <wildBiomes>
		<ExtremeDesert>0.005</ExtremeDesert>
		<Desert>0.009</Desert>
		<AridShrubland>0.015</AridShrubland>
		<TropicalRainforest>0.01</TropicalRainforest>
		<TemperateForest>0.002</TemperateForest>
      </wildBiomes>
      <canBePredatorPrey>false</canBePredatorPrey>
      <gestationPeriodDays>34</gestationPeriodDays>
      <lifeExpectancy>15</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.5</minAge>
          <soundWounded>Pawn_Muffalo_Wounded</soundWounded>
          <soundDeath>Pawn_Muffalo_Death</soundDeath>
          <soundCall>Pawn_Muffalo_Call</soundCall>
          <soundAngry>Pawn_Muffalo_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
      <li>AnimalFighter</li>
    </tradeTags>
  </ThingDef>
  
